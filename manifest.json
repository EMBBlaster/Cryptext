{

  "manifest_version": 2,
  "name": "Cryptext",
  "version": "1.1",

  "description": "Encrypts and decrypts text using various encoding methods.",
  "icons": {
    "48": "icons/ct-48.png"
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/ct-48.png",
    "default_title": "Cryptext",
    "default_popup": "panel/panel.html"
  }

}
